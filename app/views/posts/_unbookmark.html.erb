<%= turbo_frame_tag dom_id(post, :bookmark) do %>
	<%= link_to bookmark_path(current_user.bookmarks.find_by(post_id: post.id)), style: 'text-decoration:none', class: 'float-right', data: { turbo_method: :delete } do %>
		<i class="bi bi-arrow-through-heart-fill"></i><%= post.bookmarks.count %>いいね！
	<% end %>
<% end %>
