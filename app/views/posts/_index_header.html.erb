  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <form>
        <%= render 'search_form', url: posts_path %>
      </form>
      <ul class="nav nav-tabs mb-6 justify-content-center" id="tab" role="tablist">
        <li class="nav-item ms-0" role="presentation">
          <a class="nav-link <%= active_class_for('posts', 'index') %>" href="<%= posts_path %>" role="tab"><%= t('posts.index.new_post') %></a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link <%= active_class_for('posts', 'top_rated') %>" href="<%= top_rated_posts_path %>" role="tab"><%= t('posts.index.top_rated_post') %></a>
        </li>
        <% if current_user %>
          <li class="nav-item" role="presentation">
            <a class="nav-link <%= active_class_for('posts', 'recommended') %>" href="<%= recommended_posts_path %>" role="tab"><%= t('posts.index.recommended_post') %></a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
