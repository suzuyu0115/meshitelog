<% assign_meta_tags title: t('.title') %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <form>
        <%= render 'search_form', url: posts_path %>
      </form>
      <ul class="nav nav-lb-tab mb-6 justify-content-center" id="tab" role="tablist">
        <li class="nav-item ms-0" role="presentation">
          <a class="nav-link <%= active_class_for('posts', 'index') %>" href="<%= posts_path %>" role="tab">新着投稿</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link <%= active_class_for('posts', 'top_rated') %>" href="<%= top_rated_posts_path %>" role="tab">高評価順</a>
        </li>
      </ul>
    </div>
  </div>
  <br>
  <!-- 投稿一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
      <!-- ページネーション -->
      <div class="row">
        <div class="col-12">
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
</div>
