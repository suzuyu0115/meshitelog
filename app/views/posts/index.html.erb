<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <form>
        <%= render 'search_form', url: posts_path %>
      </form>
    </div>
  </div>

  <!-- 投稿一覧 -->
  <%= turbo_frame_tag 'posts-list' do %>
    <div class="row">
      <div class="col-12">
        <div class="row">
          <% if @posts.present? %>
            <%= render @posts %>
          <% else %>
            <p><%= t('.no_result') %></p>
          <% end %>
        </div>
        <!-- ページネーション -->
        <div class="row">
          <div class="col-12">
            <%= paginate @posts %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
